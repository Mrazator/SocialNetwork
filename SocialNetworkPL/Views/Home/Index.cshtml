@using System.Web.Mvc.Html
@using X.PagedList.Mvc

@model SocialNetworkPL.Models.PostsListViewModel

@{
    ViewBag.Title = "PostListView";
}

@{
    for (int i = 0; i < Model.Posts.Count; i+=2)
    {
        if (i != 0 && i % 2 == 0)
        {
            <div class="row">
                <div class="col-md-6">
                    @Model.Posts[i - 1].Text
                </div>
                <div class="col-md-6">
                    @Model.Posts[i].Text
                </div>
            </div>
        }
    }
    if(Model.Posts.Count % 2 == 1)
    {
        <div class="row">
            <div class="col-md-6">
                @Model.Posts[Model.Posts.Count -1].Text
            </div>
        </div>
    }

}

